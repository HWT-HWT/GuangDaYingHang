.TransferDetalis-Detalis {
  width: 100vw;
  min-height: 100vh;
  background-color: #f8f8f8;
}
.TransferDetalis-Detalis .transfer-title {
  background-color: #fff;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-titleBox {
  width: 95%;
  margin: 0 auto;
  background-color: #fff;
  text-align: center;
  padding: 50rpx 0;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-titleBox .TitleBox-Money {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx auto;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-titleBox .TitleBox-Money .Tishi {
  height: 30rpx;
  padding: 0 10rpx;
  margin-top: -10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  color: #c48165;
  font-size: 20rpx;
  border: 1px solid;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-titleBox .TitleBox-Money ._span {
  font-size: 45rpx;
  margin-left: 20rpx;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-titleBox ._span {
  font-size: 30rpx;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-titleBox text {
  font-size: 25rpx;
  color: #ccc;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-ListView {
  width: 95%;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-ListView .ListView {
  width: 90%;
  padding: 30rpx 0;
  border-bottom: 1px solid #f4f4f4;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-ListView .ListView ._span {
  font-size: 30rpx;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-ListView .ListView text {
  font-size: 28rpx;
  color: #888;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-ListView .ListView view {
  font-size: 28rpx;
  color: #888;
  display: flex;
  align-items: center;
}
.TransferDetalis-Detalis .TransferDetalis-Detalis-ListView .ListView view image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
}

