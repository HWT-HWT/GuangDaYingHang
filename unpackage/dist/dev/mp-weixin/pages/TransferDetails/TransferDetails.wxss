.TransferDetails {
  width: 100vw;
  height: 100vh;
  background: #f8f8f8;
}
.TransferDetails .transfer-title {
  background-color: #fff;
}
.TransferDetails .transfer-Search {
  background-color: #fff;
  padding: 30rpx;
}
.TransferDetails .transfer-Search .Search-box {
  display: flex;
  align-items: center;
  width: 95%;
  margin: 0 auto;
  background-color: #f5f5f5;
  border-radius: 50rpx;
}
.TransferDetails .transfer-Search .Search-box image {
  padding: 10rpx 20rpx;
  width: 35rpx;
  height: 35rpx;
}
.TransferDetails .transfer-Search .Search-box ._span {
  font-size: 28rpx;
  color: #555;
}
.TransferDetails .Details-SelectTabs {
  padding: 0rpx 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eaeaea;
}
.TransferDetails .Details-SelectTabs .Tabs {
  width: 30%;
  white-space: nowrap;
  overflow: hidden;
  /* 隐藏溢出内容 */
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #555;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}
.TransferDetails .Details-SelectTabs .Tabs image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.TransferDetails .Details-SelectTabs .Tabs:hover {
  color: #2e339c;
}
.TransferDetails .TransferDetails-date {
  width: 100%;
}
.TransferDetails .TransferDetails-date .date {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  font-size: 30rpx;
  color: #555;
  border-bottom: 1px solid #eaeaea;
  padding: 20rpx;
}
.TransferDetails .TransferDetails-text {
  margin: 0 auto;
  padding: 40rpx;
  background-color: #fff;
  font-weight: bold;
  margin-top: 10rpx;
}
.TransferDetails .OtherCards-tisi {
  width: 90%;
  margin: 0 auto;
  margin-top: 50rpx;
  position: absolute;
  bottom: 50rpx;
  left: 50rpx;
}
.TransferDetails .OtherCards-tisi ._p {
  color: #fd8d0a;
  font-weight: bold;
}
.TransferDetails .OtherCards-tisi ._span {
  font-size: 25rpx;
  color: #888;
}
.TransferDetails .Account-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid #ddd;
}
.TransferDetails .Account-title ._span {
  width: 100%;
  font-size: 35rpx;
  text-align: center;
}
.TransferDetails .Account-title image {
  width: 50rpx;
  height: 50rpx;
}
.TransferDetails .Account-ListView {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.TransferDetails .Account-ListView image {
  width: 20rpx;
  height: 20rpx;
}
.TransferDetails .Time-content .ListView {
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.TransferDetails .Time-content .ListView .Box {
  width: 30%;
  text-align: center;
  border: 1px solid #ddd;
  background-color: #f8f8f8;
  padding: 10rpx 0;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}
.TransferDetails .Time-content .ListView .Box:hover {
  color: #743fb4;
  border: 1px solid #7c59a4;
}
.TransferDetails .Time-content .Time-Select {
  width: 95%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  padding-bottom: 100rpx;
}
.TransferDetails .Time-content .Time-Select .Select {
  text-align: center;
  width: 35%;
  padding: 10rpx 40rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  color: #666;
}

