.transfer {
  width: 100vw;
  height: 100vh;
  background-color: #eeeff3;
}
.transfer .transfer-title {
  background-color: #fff;
}
.transfer .transfer-ListView {
  width: 95%;
  margin: 0 auto;
  border-radius: 20rpx 20rpx 0 0;
  background: #8501ad;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 40rpx 0;
}
.transfer .transfer-ListView .ListView {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  border-right: 1px solid #fff;
}
.transfer .transfer-ListView .ListView image {
  width: 100rpx;
  height: 100rpx;
}
.transfer .transfer-ListView .ListView ._p {
  margin-top: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 35rpx;
  width: 100%;
}
.transfer .transfer-btn {
  width: 95%;
  margin: 0 auto;
  padding: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-radius: 0 0 20rpx 20rpx;
  align-items: center;
  background-color: #fff;
}
.transfer .transfer-btn .btn {
  flex: 1;
  justify-content: center;
  display: flex;
  align-items: center;
  height: 30rpx;
  border-right: 1px solid #ddd;
  padding: 0rpx 30rpx;
  color: #7c47be;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.transfer .transfer-btn .btn image {
  width: 35rpx;
  height: 35rpx;
  margin-left: 5rpx;
}
.transfer .transfer-btn .CardDali-icon {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.transfer .transfer-btn .CardDali-icon image {
  border-radius: 20rpx;
  width: 35rpx;
  height: 35rpx;
}
.transfer .transfer-recently {
  width: 95%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: 20rpx;
}
.transfer .transfer-recently .recently-ListView {
  background-color: #f8f8f8;
  padding: 40rpx 0rpx 10rpx 0rpx;
  color: #666;
  text-align: center;
  font-size: 32rpx;
  border-top: 1px solid #eaeaea;
}

