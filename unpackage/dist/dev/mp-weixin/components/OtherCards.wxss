.OtherCards {
  width: 100%;
}
.OtherCards .CreditCard-image {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}
.OtherCards .CreditCard-image image {
  width: 500rpx;
  height: 440rpx;
}
.OtherCards .Account-Add {
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.OtherCards .Account-Add .btn {
  flex: 1;
  border: 1px solid;
  padding: 20rpx 0rpx;
  border-radius: 50rpx;
  color: #794da5;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}
.OtherCards .OtherCards-tisi {
  width: 90%;
  margin: 0 auto;
  margin-top: 50rpx;
}
.OtherCards .OtherCards-tisi ._p {
  color: #fd8d0a;
  font-weight: bold;
}
.OtherCards .OtherCards-tisi ._span {
  font-size: 25rpx;
