.LoanUser {
  margin-top: 180rpx;
}
.LoanUser .Loan-Money {
  width: 95%;
  margin: 0 auto;
  color: #fff;
  background: url(/static/loan-User-1.png) no-repeat;
  background-size: 100% 100%;
}
.LoanUser .Loan-Money .Money-box {
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  text-align: center;
  line-height: 60rpx;
}
.LoanUser .Loan-Money .Money-box ._p {
  font-size: 25rpx;
}
.LoanUser .Loan-Money .Money-box ._span {
  width: 100%;
  font-size: 55rpx;
}
.LoanUser .Loan-Money .Money-box text {
  font-size: 25rpx;
}
.LoanUser .Loan-btn {
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.LoanUser .Loan-btn .btn {
  background-color: #ffede9;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  text-align: center;
  line-height: 55rpx;
  padding: 25rpx;
  border-radius: 20rpx;
}
.LoanUser .Loan-btn .btn image {
  width: 60rpx;
  height: 60rpx;
}
.LoanUser .Loan-btn .btn text {
  width: 100%;
  font-size: 30rpx;
}
.LoanUser .loan-service {
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 20rpx;
}

